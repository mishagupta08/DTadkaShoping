                                    </td>
                                </tr>
                                <tr>
                                    <td class="fieldKey"><label for="username">Email</label>:</td>
                                    <td class="feWidget">
                                        @Html.TextBoxFor(m => m.OrderDetail.billing_email, new { @type = "email", @id = "billing_email", @required = "required", @placeholder = "" })
