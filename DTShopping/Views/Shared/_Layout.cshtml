            var searchString = $("#search_input").val();

            uri = '/Home/SearchProductList?page=1&searchString=' + searchString;

            uri = uri.trim().replace(/ /g, '%20');
            window.location.href = (uri);
            return false;
        })

        $('.brandLink').click(
